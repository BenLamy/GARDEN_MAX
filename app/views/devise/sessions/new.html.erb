<div id="signin-page">
  <header class="signin-header">
    <h1 class="signin-title">Welcome Back</h1>
    <p class="signin-subtitle">Sign in to your Garden Max account</p>
  </header>

  <div class="signin-form-wrapper">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "signin-form" }) do |f| %>
      <div class="signin-form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "signin-input" },
                    label_html: { class: "signin-label" },
                    wrapper_html: { class: "signin-input-group" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "signin-input" },
                    label_html: { class: "signin-label" },
                    wrapper_html: { class: "signin-input-group" } %>
        <% if devise_mapping.rememberable? %>
          <%= f.input :remember_me, as: :boolean,
                      wrapper_html: { class: "signin-checkbox-group" },
                      label_html: { class: "signin-checkbox-label" } %>
        <% end %>
      </div>

      <div class="signin-form-actions">
        <%= f.button :submit, "Sign In", class: "signin-btn signin-btn-primary" %>
      </div>
    <% end %>

    <div class="signin-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
